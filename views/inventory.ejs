<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 ">
            <a class="btn btn-primary" href="/inventory/add">Add new stock</a>

            <a href="#" class="btn btn-primary">
                <i class="material-icons">print</i>
            </a>
            <div class="card p-2 shadow-sm border-bottom-primary">


                <div class="card-body">
                    <% if (msg.length!==0) { %>
                        <div class="alert alert-success" role="alert">
                            <%= msg %>
                        </div>
                        <% } %>
                    <div class="table-responsive">
                        <table id="example" class="table">
                            <thead class=" text-primary">
                                <th>#</th>
                                <th>Kode Material</th>
                                <th>Material</th>
                                <th>QTY</th>
                                <th>Unit</th>
                                <th>Action</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <% if (inventory===0) { %>
                                        <tr>
                                            <td colspan="4">
                                                <div class="alert alert-danger fw-bold" role="alert">
                                                    Data Contact masih kosong.
                                                </div>
                                            </td>
                                        </tr>

                                    <% } %>
                                    <% inventory.forEach(inventory => { %>

                                        <td></td>
                                        <td><%= inventory.kode_material %>
                                        </td>
                                        <td><%= inventory.nama_material %>
                                        </td>
                                        <td><%= inventory.qty_stock  %>
                                        </td>
                                        <td class="text-primary"><%= inventory.unit  %>
                                        </td>
                                        <td
                                            class="td-actions">
                                            <!-- <button type="button" rel="tooltip" class="btn btn-info">
                                                                      <i class="material-icons">inventory</i>
                                                                    </button> -->
                                            <a href="/inventory/<%=inventory.kode_material%>" rel="tooltip" class="btn btn-success">
                                                <i class="material-icons" href="/inventory/<%=inventory.kode_material%>">edit</i>
                                            </a>
                                            <form action="/inventory?_method=DELETE" class="d-inline" method="POST">
                                              <input type="hidden" name="kode_material" value="<%=inventory.kode_material%>">
                                                  <button type="submit" class="btn btn-danger badge" onclick="return confirm('yakin?');">
                                                      <i class="material-icons">close</i>
                                                  </button>
                                                  
                                              </form>
                          
                                                
                                            </td>
                                        </tr>
                                    <% }) %>

                                </tbody>
                            </table>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
