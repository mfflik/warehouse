<div class="container-fluid">
    <div class="row">
      <div class="col-md-12 ">
        <a class="btn btn-primary" href="/product/add">Add new Product</a>

        <a href="#" class="btn btn-primary"> <i class="material-icons">print</i></a>
        <div class="card p-2 shadow-sm border-bottom-primary">


          <div class="card-body">
          
            <div class="table-responsive">
              <table  id="example" class="table">
                <thead class=" text-primary">
                  <th>#</th>
                  <th>Kode Produk</th>
                  <th>Nama Produk</th>
                  <th>Komponen</th>
                  <th>Keterangan</th>
                  <th>Action</th>
                </thead>
                <tbody>
                  <tr> <% if (product===0) { %>
                    <tr>
                        <td colspan="4">
                            <div class="alert alert-danger fw-bold" role="alert">
                                Data Product masih kosong.
                            </div>
                        </td>
                    </tr>

                <% } %>
                <% product.forEach(product => { %>

                    <td></td>
                    <td><%= product.kode_produk %></td>
                    <td><%= product.nama_produk %></td>
                    <td class="text-primary"><%= product.material.length %></td>
                    <td class="text-primary"><%= product.keterangan %></td>
                    <td class="td-actions">
                      <!-- <button type="button" rel="tooltip" class="btn btn-info">
                        <i class="material-icons">inventory</i>
                      </button> -->
                      <button type="button" rel="tooltip" class="btn btn-success">
                        <i class="material-icons">edit</i>
                      </button>
                      <form action="/product?_method=DELETE" class="d-inline" method="POST">
                        <input type="hidden" name="kode_produk" value="<%=product.kode_produk%>">
                            <button type="submit" class="btn btn-danger badge" onclick="return confirm('yakin?');">
                                <i class="material-icons">close</i>
                            </button>
                            
                        </form>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>

            </div>
          </div>
        </div>
             </div>
    </div>
